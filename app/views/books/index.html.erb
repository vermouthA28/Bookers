<h1>Books</h1>

<% @books.each do |book| %>

  <p>Title</p>
  <span><%= book.title %></span>
  
  <p>Body</p>
  <span><%= book.body %></span>
  
  
  
  <%= link_to "Show",book_path(book.id) %>
  <%= link_to "Edit",edit_book_path(book.id) %>
  <%= link_to "Destroy",book_path(book.id) %>




<% end %>



<h2>New book</h2>
<%= form_with model: @book do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>


 <%= f.submit 'Create Book' %>
<% end %>